
<% if @next_7_days.empty? %>
		 <h3>There are no past shifts for the last 7 days at this time.</h3>
	<% else %>
<h3>
<p id="notice"><%= notice %></p>
<table id="dt-select" class="table" cellspacing="5" cellpadding="5" style="font-family:courier; font-size:12px;">
  <thead>
    <tr>
      <th>Employee Name</th>
      <th>Store</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @next_7_days.each do |shift| %>
      <tr>
        <td><%= link_to shift.assignment.employee.proper_name, employee_path(shift.assignment.employee) %></td>
        <td><%= link_to shift.assignment.store.name, store_path(shift.assignment.store) %></td>
        <td><%= shift.date.strftime("%m/%d/%y") %></td>
        <td><%= shift.start_time.localtime.strftime("%I:%M %p") %></td>
        <td><%= shift.end_time.localtime.strftime("%I:%M %p") %></td>
        <td><button class="button1"><%= link_to 'Show', shift %></td>
        <td><button class="button2"><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><button class="button3"><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	<% end %>
</h3>
