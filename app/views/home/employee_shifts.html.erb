<p>&nbsp;</p>

<div class="container1">

	<h1>Today's Shifts</h1>
	
		<% unless @today_shifts.nil? or @today_shifts.empty? %>
		<h3>
			<table id="dt-select" class="table" cellspacing="5" cellpadding="5" style="font-family:courier; font-size:12px;">
			    <thead>
			      <tr>
			        <th>Date</th>
			        <th>Start Time</th>
			        <th>End Time</th>
			        <th>&nbsp;</th>
			      </tr>
			    </thead>
			    <tbody>
			      <% @today_shifts.each do |shift| %>
			        <tr>
			          <td><%= shift.date.strftime("%m/%d/%y") %></td>
			          <td><%= shift.start_time.localtime.strftime("%I:%M %p") %></td>
			          <td><%= shift.end_time.localtime.strftime("%I:%M %p") %></td>
			          <% if Time.now.strftime("%H:%M %p") > shift.end_time.strftime("%H:%M %p") %>
				          <td>
				          	<div id = "view-jobs-button">
				            <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
				              &nbsp;View Jobs&nbsp;
				            <% end %>
				        	</div>
		          		  </td>
	          		  <% else %>
			        	 	<td>&nbsp;</td>
	          		  <% end %>

			        </tr>
			      <% end %>
			    </tbody>
		  </table>
		  </h3>
	  <%= will_paginate @today_shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next", param_name: "today_shifts" %>  

	  <% else %>
	  <h3>You have no shifts today.</h3>
	  <% end %>
	 </div>

	 <p>&nbsp;</p>

	<div class="container1">
		<h1>Past Shifts</h1>

    <% if @past_shifts.empty? %>
	  	<h3>You have no past shifts.</h3>
	  
	      <% else %>
	      <h3>
		<table id="dt-select" class="table" cellspacing="5" cellpadding="5" style="font-family:courier; font-size:12px;">
		    <thead>
		      <tr>
		        <th>Date</th>
		        <th>Start Time</th>
		        <th>End Time</th>
		        <th>&nbsp;</th>
		      </tr>
		    </thead>
		     <% end %>
		    <tbody>
		      <% @past_shifts.each do |shift| %>
		        <tr>
		          <td><%= shift.date.strftime("%m/%d/%y") %></td>
		          <td><%= shift.start_time.localtime.strftime("%I:%M %p") %></td>
		          <td><%= shift.end_time.localtime.strftime("%I:%M %p") %></td>
		          <% if shift.completed? %>
			          <td>
			          	<button class="button1">
			            <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
			              &nbsp;View Shift&nbsp;
			            <% end %>
			        	</button>
	          		  </td>
	          	  <% else %>
	          	  	<td>&nbsp;</td>
          		  <% end %>
		        </tr>
		      <% end %>
		    </tbody>
	  </table>
	  </h3>
	  <%= will_paginate @past_shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next", param_name: "past_shifts" %>  
	 </div>


	<div class="container1">
		<h1>Upcoming Shifts</h1>

