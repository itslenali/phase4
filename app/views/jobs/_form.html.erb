<div class="container1">
<h2>
    <%= form_with(model: job, local: true) do |form| %>
    <% if job.errors.any? %>
     <div id="error_explanation">
      <h1 style="font-family:courier; font-size:12px;"><font color="red"><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h1>
      <h1 style="font-family:courier; font-size:12px;" align="left"><% job.errors.full_messages.each do |message| %>
        <li style="font-family:courier; font-size:12px;"><%= message %></li>
      <% end %></h1>
    </div>
<% end %>


