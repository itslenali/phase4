
<!------ ASSIGNMENTS FORM ERRORS ---------->
<div class="container1">
<h2>
<%= simple_form_for(@assignment) do |form| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h1 style="font-family:courier; font-size:12px;"><font color="red"><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h1>
      <ul style="font-family:courier; font-size:12px;">
      <h1 style="font-family:courier; font-size:12px;" align="left"><% assignment.errors.full_messages.each do |message| %>
        <li style="font-family:courier; font-size:12px;"><%= message %></li>
      <% end %></h1>
      </ul>
    </div>
<% end %>

<!------ EMPLOYEES INDEX TABLE START ---------->
<table class="table" cellspacing="5" cellpadding="5" style="font-family:courier; font-size:12px;">
<thead><p style="font-family:courier; font-size:16px;" align="left"><strong>New/Edit Assignment</strong></p>
<thead align="right">
<tr align="right">
    <td>
      <div class="input-field">
    <%= form.label :store_id %>
    <%= form.number_field :store_id %>
  </div>
    </td>
</tr>
<tr align="right">
  <td>
    <div class="input-field">
    <%= form.label :employee_id %>
    <%= form.number_field :employee_id %>
  </div>
  </td>
</tr>
<tr>
  <td>
    <div class="input-field">
     <%= form.input :start_date %> 
    </div>
  </td>
</tr>
<tr>
  <td>
    <div class="input-field">
    <%= form.input :end_date %>
    </div>
  </div>
  </td>
</tr>
<tr>
  <td>
    
    <div class="form-group">
    <%= form.label :pay_level %>
    <%= form.number_field :pay_level %>
  </div>
<tr bgcolor="#ffdb4d">
  <td>
    <div class="actions">
    <%= form.button :submit %>
  </div>
  </td>
</tr>
</table>
</h2>
<% end %>
</div>
</div>
<br><br>

