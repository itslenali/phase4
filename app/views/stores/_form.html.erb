<div class="container1">
<h2>
<%= simple_form_for(@store) do |f| %>
  <% if store.errors.any? %>
     <div id="error_explanation">
      <h1 style="font-family:courier; font-size:12px;"><font color="red"><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h1>
      <h1 style="font-family:courier; font-size:12px;" align="left"><% store.errors.full_messages.each do |message| %>
        <li style="font-family:courier; font-size:12px;"><%= message %></li>
      <% end %></h1>
    </div>
<% end %>

