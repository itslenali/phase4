<h1>Stores</h1>
<!------ STORES INDEX TABLE START ---------->
<h3>
<table id="dt-select" class="table" cellspacing="5" cellpadding="5" style="font-family:courier; font-size:12px;">
  <thead>
    <tr>
      <th>Store Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Active</th>
      
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= store.active %></td>
        <td><button class="button1"><%= link_to 'Show', store %></td>
        <td><button class="button2"><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><button class="button3"><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</h3>
<br><br>

