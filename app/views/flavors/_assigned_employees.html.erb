<h3>Store Flavors</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% unless @active_flavors.nil? or @active_flavors.empty? %>
      <% @active_flavors.each do |flavor| %>
        <tr>
          <td><%= link_to flavor.name, flavor_path(flavor) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @active_flavors, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", param_name: "active_flavors" %>

